/* pages/address-edit/address-edit.wxss */

.address-edit-container {
  background: var(--secondary-color);
  min-height: 100vh;
  padding-bottom: 100rpx; /* 减少底部间距 */
}

/* 自定义导航栏 */
.custom-navbar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  background: var(--primary-color);
  height: 88rpx;
  padding-top: var(--status-bar-height, 44rpx);
  z-index: 1000;
}

/* 地址编辑标题区域 */
.address-edit-header {
  background: #ffffff;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx var(--spacing-lg); /* 减少垂直间距 */
  margin-top: calc(88rpx + var(--status-bar-height, 44rpx));
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.address-edit-back-btn {
  width: 60rpx; /* 减小按钮尺寸 */
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.address-edit-back-btn:active {
  transform: scale(0.95);
}

.back-arrow-icon {
  width: 28rpx; /* 减小图标尺寸 */
  height: 28rpx;
}

.address-edit-title-section {
  flex: 1;
  text-align: center;
}

.address-edit-title {
  color: var(--text-primary);
  font-size: 32rpx; /* 减小标题字体 */
  font-weight: 600;
}

.address-edit-placeholder {
  width: 60rpx;
  height: 60rpx;
}

/* 表单内容 */
.form-content {
  padding: 20rpx; /* 减少外边距 */
}

.form-section {
  background: #ffffff;
  border-radius: var(--border-radius-lg);
  margin-bottom: 20rpx; /* 减少间距 */
  overflow: hidden;
}

.form-item {
  padding: 24rpx 20rpx; /* 进一步减少内边距 */
  border-bottom: 1rpx solid var(--border-color);
}

.form-item:last-child {
  border-bottom: none;
}

/* 简化的标签样式 */
.label {
  font-size: 26rpx; /* 进一步减小字体 */
  color: var(--text-primary);
  font-weight: 500;
  margin-bottom: 12rpx; /* 减少间距 */
  display: block;
}

.label.required::after {
  content: " *";
  color: #ff4757;
  font-size: 26rpx;
}

/* 移除原有的 form-label 样式 */
.form-label {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx; /* 减少间距 */
}

.label-text {
  font-size: 28rpx; /* 减小字体 */
  color: var(--text-primary);
  font-weight: 500;
}

.required {
  color: #ff4757;
  margin-left: 4rpx;
  font-size: 28rpx; /* 减小字体 */
}

.form-input {
  width: 100%;
  font-size: 26rpx; /* 进一步减小字体 */
  color: var(--text-primary);
  padding: 8rpx 0; /* 进一步减少内边距 */
  border: none;
  outline: none;
}

.form-input::placeholder {
  color: var(--text-placeholder);
  font-size: 26rpx;
}

.form-textarea {
  width: 100%;
  font-size: 26rpx; /* 进一步减小字体 */
  color: var(--text-primary);
  padding: 8rpx 0; /* 进一步减少内边距 */
  border: none;
  outline: none;
  min-height: 50rpx; /* 进一步减少最小高度 */
  line-height: 1.4;
}

.form-textarea::placeholder {
  color: var(--text-placeholder);
  font-size: 26rpx;
}

/* 地址选择器 */
.location-item {
  cursor: pointer;
  width: 100%;
}

.location-picker {
  width: 100%;
}

.location-selector {
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 100%;
  padding: 0;
  background: transparent;
  border: none;
  font-size: 26rpx; /* 进一步减小字体 */
  color: var(--text-primary);
  text-align: left;
}

.location-text {
  flex: 1;
  text-align: left;
  color: var(--text-primary);
}

.location-placeholder {
  color: var(--text-placeholder);
}

.arrow {
  font-size: 20rpx; /* 进一步减小箭头大小 */
  color: var(--text-secondary);
  margin-left: 12rpx; /* 进一步减少间距 */
  transition: transform 0.3s ease;
}

.arrow.active {
  transform: rotate(90deg);
}

/* 选择器弹窗样式优化 */
picker {
  width: 100%;
}

picker .wx-picker-action {
  background-color: var(--bg-secondary);
  border-bottom: 1rpx solid var(--border-color);
}

picker .wx-picker-item {
  height: 70rpx; /* 减少高度 */
  line-height: 70rpx;
  font-size: 26rpx; /* 减小字体 */
  color: var(--text-primary);
}

picker .wx-picker-item.wx-picker-item_active {
  color: var(--primary-color);
  font-weight: 500;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .location-selector {
    font-size: 24rpx;
  }
  
  .arrow {
    font-size: 18rpx;
  }
  
  .form-input, .form-textarea, .label {
    font-size: 24rpx;
  }
  
  .default-label {
    font-size: 24rpx;
  }
}

/* 默认地址设置 */
.default-section {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 28rpx 20rpx; /* 与表单项保持一致 */
}

.default-label {
  font-size: 26rpx; /* 与其他标签保持一致 */
  color: var(--text-primary);
  font-weight: 500;
}

.switch-container {
  display: flex;
  align-items: center;
}

.default-switch {
  transform: scale(0.7); /* 进一步缩小开关 */
}

/* 底部保存按钮 */
.bottom-save {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #ffffff;
  padding: 16rpx var(--spacing-lg); /* 进一步减少内边距 */
  box-shadow: 0 -2rpx 12rpx rgba(0, 0, 0, 0.1);
  z-index: 999;
}

.save-btn {
  background: var(--primary-color);
  color: #ffffff;
  font-size: 28rpx; /* 适中的字体大小 */
  font-weight: 500;
  padding: 20rpx 0; /* 进一步减少内边距 */
  border-radius: var(--border-radius-lg);
  text-align: center;
  transition: all 0.3s ease;
}

.save-btn:active {
  background: var(--primary-dark);
  transform: scale(0.98);
}

/* 禁用状态 */
.save-btn.disabled {
  background: var(--text-placeholder);
  color: #ffffff;
} 