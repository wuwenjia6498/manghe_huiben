}

.arrow-container {
  width: 32rpx;
  height: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.arrow-icon {
  width: 24rpx;
  height: 24rpx;
  transition: all 0.3s ease;
}

.start-button:active .arrow-icon {
