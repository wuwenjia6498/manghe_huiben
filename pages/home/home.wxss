.features-section {
  padding: 0 40rpx 60rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  gap: 20rpx;
}

.feature-card {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx 20rpx;
  display: flex;
