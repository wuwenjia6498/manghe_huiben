/* pages/product-detail/product-detail.wxss */

.product-detail-container {
  background: var(--secondary-color);
  min-height: 100vh;
  padding: 0 var(--spacing-lg);
}

/* 自定义导航栏 */
.custom-navbar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: 88rpx;
  background: var(--primary-color);
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 var(--spacing-base);
  z-index: 1000;
}

.navbar-right {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.share-icon {
  color: #ffffff;
  font-size: var(--font-size-lg);
  font-weight: 500;
}

.navbar-center {
  flex: 1;
  text-align: center;
}

.navbar-title {
  color: #ffffff;
  font-size: var(--font-size-lg);
  font-weight: 500;
}

/* 浮动后退按钮 */
.floating-back-btn {
  position: absolute;
  top: 40rpx;
  left: 30rpx;
  width: 40rpx;
  height: 40rpx;
  background: transparent;
  border-radius: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 10;
}

.floating-back-btn:active {
  transform: scale(0.9);
}

.back-arrow-icon {
  width: 24rpx;
  height: 24rpx;
  filter: brightness(0) invert(1); /* 将图标变为白色 */
  transition: transform 0.2s ease;
}

.floating-back-btn:active .back-arrow-icon {
  transform: translateX(-2rpx);
}

/* 商品主图区域 */
.product-hero {
  position: relative;
  height: 500rpx;
  margin: 88rpx calc(-1 * var(--spacing-lg)) 0; /* 导航栏高度，负边距让图片全宽 */
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
}

/* 背景图片 */
.hero-bg-image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1;
}

/* 主图覆盖层 */
.hero-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(243, 108, 156, 0.35); /* 主色调粉色，35%透明度，更加淡雅 */
  display: flex;
  align-items: center;
  justify-content: center;
  padding: var(--spacing-xl) var(--spacing-base);
  z-index: 2;
}

.hero-content {
  text-align: center;
  color: #ffffff;
}

.brand-info {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: var(--spacing-base);
}

.brand-icon {
  font-size: 48rpx;
  margin-right: var(--spacing-sm);
}

.brand-name {
  font-size: 48rpx;
  font-weight: bold;
}

.product-subtitle {
  font-size: 32rpx;
  opacity: 0.95;
  font-weight: 500;
  line-height: 1.4;
}

/* 价格区域 */
.price-section {
  padding: 24rpx 32rpx;
  background: #ffffff;
  margin: 20rpx var(--spacing-lg);
  display: flex;
  align-items: baseline;
  gap: 20rpx;
  border-radius: 16rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.12);
  border: 2rpx solid rgba(243, 108, 156, 0.1);
  position: relative;
}

.current-price {
  font-size: 48rpx;
  color: #f36c9c;
  font-weight: 700;
  text-shadow: 0 2rpx 4rpx rgba(243, 108, 156, 0.2);
}

.current-price.placeholder {
  font-size: 32rpx;
  color: #999;
  font-weight: 500;
  text-shadow: none;
}

.original-price {
  font-size: 32rpx;
  color: #999;
  text-decoration: line-through;
  opacity: 0.8;
}

/* 配置选项区域 */
.config-section {
  margin-top: var(--spacing-base);
}

.config-item {
  background: #ffffff;
  margin-bottom: var(--spacing-base);
  padding: var(--spacing-lg);
  border-radius: var(--border-radius-lg);
}

.config-header {
  display: flex;
  align-items: center;
  margin-bottom: var(--spacing-xs);
}

.config-icon {
  font-size: var(--font-size-lg);
  margin-right: var(--spacing-sm);
}

.config-title {
  font-size: var(--font-size-lg);
  font-weight: 600;
  color: var(--text-primary);
}

.config-desc {
  font-size: var(--font-size-sm);
  color: var(--text-secondary);
  margin-bottom: var(--spacing-base);
}

.option-list {
  display: flex;
  gap: var(--spacing-sm);
  flex-wrap: wrap;
}

.option-tag {
  background: var(--secondary-color);
  color: var(--text-secondary);
  font-size: var(--font-size-sm);
  padding: var(--spacing-sm) var(--spacing-base);
  border-radius: var(--border-radius-base);
  border: 2rpx solid transparent;
  transition: all 0.3s ease;
}

.option-tag.selected {
  background: var(--primary-color);
  color: #ffffff;
  border-color: var(--primary-color);
}

.option-tag:active {
  transform: scale(0.95);
}

/* 信息说明区域 */
.info-section {
  background: #ffffff;
  margin: var(--spacing-base) var(--spacing-lg);
  padding: var(--spacing-lg);
  border-radius: var(--border-radius-lg);
}

.info-header {
  display: flex;
  align-items: center;
  margin-bottom: var(--spacing-base);
}

.info-icon {
  font-size: var(--font-size-lg);
  margin-right: var(--spacing-sm);
}

.info-title {
  font-size: var(--font-size-lg);
  font-weight: 600;
  color: var(--text-primary);
}

/* 成新度说明 */
.info-list {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-sm);
}

.info-item {
  display: flex;
  font-size: var(--font-size-sm);
  line-height: 1.5;
}

.condition-name {
  color: var(--text-primary);
  font-weight: 500;
  min-width: 120rpx;
}

.condition-desc {
  color: var(--text-secondary);
  flex: 1;
}

/* 服务说明 */
.service-list {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-base);
}

.service-item {
  display: flex;
  align-items: center;
}

.service-icon {
  font-size: var(--font-size-base);
  margin-right: var(--spacing-sm);
  width: 40rpx;
  text-align: center;
}

.service-icon.good {
  color: var(--success-color);
}

.service-icon.warning {
  color: var(--warning-color);
}

.service-icon.error {
  color: var(--error-color);
}

.service-icon.info {
  color: var(--text-secondary);
}

.service-text {
  font-size: var(--font-size-sm);
  color: var(--text-secondary);
  line-height: 1.4;
}

/* 价格信息区域 */
.price-info-section {
  background: #ffffff;
  margin-bottom: var(--spacing-base);
  padding: var(--spacing-lg);
  border-radius: var(--border-radius-lg);
}

.final-price {
  display: flex;
  align-items: center;
  gap: var(--spacing-base);
  margin-top: var(--spacing-sm);
}

.price-current {
  font-size: 50rpx;
  font-weight: 700;
  color: var(--primary-color);
}

.price-original {
  font-size: var(--font-size-base);
  color: var(--text-placeholder);
  text-decoration: line-through;
}

/* 底部操作栏 */
.bottom-actions {
  background: #ffffff;
  padding: var(--spacing-lg) var(--spacing-lg) var(--spacing-xl);
  display: flex;
  gap: var(--spacing-base);
  box-shadow: 0 -2rpx 12rpx rgba(0, 0, 0, 0.1);
  margin: var(--spacing-lg) calc(-1 * var(--spacing-lg)) 0;
  border-radius: var(--border-radius-lg) var(--border-radius-lg) 0 0;
}

.action-btn {
  flex: 1;
  height: 88rpx;
  border-radius: var(--border-radius-lg);
  font-size: var(--font-size-base);
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.action-btn.secondary {
  background: #ffffff;
  color: var(--primary-color);
  border: 2rpx solid var(--primary-color);
}

.action-btn.secondary:active {
  background: var(--secondary-color);
}

.action-btn.primary {
  background: var(--primary-color);
  color: #ffffff;
}

.action-btn.primary:active {
  background: var(--primary-dark);
}

/* 商品选项样式 */
.options-section {
  padding: 20rpx;
  background: #fff;
  margin-top: 20rpx;
}

.option-group {
  margin-bottom: 30rpx;
}

.option-title {
  font-size: 28rpx;
