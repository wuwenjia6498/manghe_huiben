}

.option-item.disabled {
  color: #999;
  background: #f5f5f5;
  border-color: #eee;
  cursor: not-allowed;
}

/* 加载状态样式 */
.loading-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
