/* pages/category/category.wxss */

.category-container {
  padding: var(--spacing-base);
  background: var(--secondary-color);
  min-height: 100vh;
}

/* 页面标题区域 */
.page-header {
  text-align: center;
  padding: var(--spacing-xl) 0 var(--spacing-lg);
}

.page-title {
  font-size: var(--font-size-xxl);
  font-weight: 600;
  color: var(--text-primary);
  display: block;
}

.page-subtitle {
  font-size: var(--font-size-sm);
  color: var(--text-secondary);
  margin-top: var(--spacing-xs);
  display: block;
}

/* 分段区域 */
.section {
  margin-bottom: var(--spacing-xl);
}

.section-header {
  margin-bottom: var(--spacing-base);
}

.section-title {
  font-size: var(--font-size-lg);
  font-weight: 600;
  color: var(--text-primary);
  display: block;
}

.section-desc {
  font-size: var(--font-size-sm);
  color: var(--text-secondary);
  margin-top: 4rpx;
  display: block;
}

/* 年龄分类网格 */
.category-grid {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-sm);
}

.age-card {
  background: #ffffff;
  border-radius: var(--border-radius-lg);
  padding: var(--spacing-lg);
  display: flex;
  align-items: center;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
  position: relative;
}

.age-card:active {
  transform: scale(0.98);
  box-shadow: 0 1rpx 6rpx rgba(0, 0, 0, 0.1);
}

.category-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: var(--border-radius-lg);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: var(--spacing-base);
  flex-shrink: 0;
}

.icon-baby {
  background: linear-gradient(135deg, #FFB6C1, #FFC0CB);
}

.icon-child {
  background: linear-gradient(135deg, #87CEEB, #98D8E8);
}

.icon-student {
  background: linear-gradient(135deg, #DDA0DD, #E6E6FA);
}

.icon-text {
  font-size: 36rpx;
}

.category-info {
  flex: 1;
}

.category-name {
  font-size: var(--font-size-lg);
  font-weight: 600;
  color: var(--text-primary);
  display: block;
}

.category-count {
  font-size: var(--font-size-sm);
  color: var(--text-secondary);
  margin-top: 4rpx;
  display: block;
}

.category-tag {
  background: var(--primary-color);
  color: #ffffff;
  font-size: var(--font-size-xs);
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  position: absolute;
  top: var(--spacing-sm);
  right: var(--spacing-sm);
}

/* 新旧程度列表 */
.category-list {
  background: #ffffff;
  border-radius: var(--border-radius-lg);
  overflow: hidden;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.category-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: var(--spacing-lg);
  border-bottom: 1rpx solid var(--border-color);
  transition: background-color 0.3s ease;
}

.category-row:last-child {
  border-bottom: none;
}

.category-row:active {
  background-color: #f5f5f5;
}

.row-left {
  display: flex;
  align-items: center;
  flex: 1;
}

.condition-badge {
  font-size: var(--font-size-xs);
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
  margin-right: var(--spacing-base);
  font-weight: 500;
}

.badge-new {
  background: #E8F5E8;
  color: var(--success-color);
}

.badge-excellent {
  background: #FFF3E0;
  color: var(--warning-color);
}

.badge-good {
  background: #F3E5F5;
  color: #9C27B0;
}

.row-info {
  flex: 1;
}

.row-title {
  font-size: var(--font-size-base);
  font-weight: 500;
  color: var(--text-primary);
  display: block;
}

.row-desc {
  font-size: var(--font-size-sm);
  color: var(--text-secondary);
  margin-top: 4rpx;
  display: block;
}

.row-right {
  display: flex;
  align-items: center;
}

.price-range {
  font-size: var(--font-size-sm);
  color: var(--primary-color);
  font-weight: 500;
  margin-right: var(--spacing-sm);
}

.arrow {
  font-size: var(--font-size-lg);
  color: var(--text-placeholder);
}

/* 热门推荐 */
.recommend-list {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-sm);
}

.recommend-card {
  background: #ffffff;
  border-radius: var(--border-radius-lg);
  overflow: hidden;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
  display: flex;
  transition: all 0.3s ease;
}

.recommend-card:active {
  transform: scale(0.98);
}

.recommend-cover {
  width: 160rpx;
  height: 120rpx;
  flex-shrink: 0;
}

.recommend-info {
  padding: var(--spacing-base);
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.recommend-title {
  font-size: var(--font-size-base);
  font-weight: 500;
  color: var(--text-primary);
  line-height: 1.4;
  margin-bottom: var(--spacing-xs);
}

.recommend-tags {
  display: flex;
  gap: var(--spacing-xs);
  margin-bottom: var(--spacing-sm);
}

.tag {
  background: var(--secondary-color);
  color: var(--text-secondary);
  font-size: var(--font-size-xs);
  padding: 4rpx 8rpx;
  border-radius: 8rpx;
}

.recommend-price {
  display: flex;
  align-items: center;
  gap: var(--spacing-xs);
}

.price {
  font-size: var(--font-size-lg);
  font-weight: 600;
  color: var(--primary-color);
}

.original-price {
  font-size: var(--font-size-sm);
  color: var(--text-placeholder);
  text-decoration: line-through;
} 