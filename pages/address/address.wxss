/* pages/address/address.wxss */

.address-container {
  background: var(--secondary-color);
  min-height: 100vh;
  padding-bottom: 100rpx; /* 减少底部间距 */
}

/* 自定义导航栏 */
.custom-navbar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  background: var(--primary-color);
  height: 88rpx;
  padding-top: var(--status-bar-height, 44rpx);
  z-index: 1000;
}

/* 地址标题区域 */
.address-header {
  background: #ffffff;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx var(--spacing-lg); /* 减少垂直间距 */
  margin-top: calc(88rpx + var(--status-bar-height, 44rpx));
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.address-back-btn {
  width: 60rpx; /* 减小按钮尺寸 */
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.address-back-btn:active {
  transform: scale(0.95);
}

.back-arrow-icon {
  width: 28rpx; /* 减小图标尺寸 */
  height: 28rpx;
}

.address-title-section {
  flex: 1;
  text-align: center;
}

.address-title {
  color: var(--text-primary);
  font-size: 32rpx; /* 减小标题字体 */
  font-weight: 600;
}

.address-placeholder {
  width: 60rpx;
  height: 60rpx;
}

/* 地址内容区域 */
.address-content {
  padding: 20rpx; /* 减少外边距 */
}

/* 地址列表 */
.address-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx; /* 减少地址项间距 */
}

.address-item {
  background: #ffffff;
  border-radius: var(--border-radius-lg);
  padding: 24rpx 20rpx; /* 减少内边距 */
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
  position: relative;
}

/* 地址信息 */
.address-info {
  display: flex;
  flex-direction: column;
}

.address-top {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 12rpx; /* 减少间距 */
}

.name-phone {
  display: flex;
  align-items: center;
  gap: 16rpx; /* 减少间距 */
}

.name {
  font-size: 30rpx; /* 减小字体 */
  font-weight: 600;
  color: var(--text-primary);
}

.phone {
  font-size: 26rpx; /* 减小字体 */
  color: var(--text-secondary);
}

.default-tag {
  background: var(--primary-color);
  color: #ffffff;
  font-size: 20rpx; /* 减小字体 */
  padding: 4rpx 12rpx; /* 减少内边距 */
  border-radius: 16rpx; /* 减小圆角 */
  font-weight: 500;
}

.address-detail {
  font-size: 26rpx; /* 减小字体 */
  color: var(--text-secondary);
  line-height: 1.4; /* 减少行高 */
  margin-bottom: 16rpx; /* 减少间距 */
}

/* 地址操作 */
.address-actions {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding-top: 12rpx; /* 减少间距 */
  border-top: 1rpx solid var(--border-color);
}

.action-left {
  display: flex;
  align-items: center;
}

.default-btn {
  display: flex;
  align-items: center;
  gap: 8rpx; /* 减少间距 */
  font-size: 24rpx; /* 减小字体 */
  color: var(--text-secondary);
  transition: all 0.3s ease;
}

.default-btn.active {
  color: var(--primary-color);
}

.radio-btn {
  width: 28rpx; /* 减小尺寸 */
  height: 28rpx;
  border: 2rpx solid var(--border-color);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.default-btn.active .radio-btn {
  border-color: var(--primary-color);
}

.radio-inner {
  width: 14rpx; /* 减小尺寸 */
  height: 14rpx;
  border-radius: 50%;
  background: transparent;
  transition: all 0.3s ease;
}

.radio-inner.checked {
  background: var(--primary-color);
}

.action-right {
  display: flex;
  gap: 12rpx; /* 减少间距 */
}

.edit-btn, .delete-btn {
  font-size: 24rpx; /* 减小字体 */
  padding: 8rpx 16rpx; /* 减少内边距 */
  border-radius: var(--border-radius-base);
  transition: all 0.3s ease;
  min-width: 60rpx; /* 减小最小宽度 */
  text-align: center;
}

.edit-btn {
  color: var(--primary-color);
  border: 1rpx solid var(--primary-color);
  background: rgba(239, 91, 166, 0.1);
}

.edit-btn:active {
  background: rgba(239, 91, 166, 0.2);
  transform: scale(0.95);
}

.delete-btn {
  color: #ff4757;
  border: 1rpx solid #ff4757;
  background: rgba(255, 71, 87, 0.1);
}

.delete-btn:active {
  background: rgba(255, 71, 87, 0.2);
  transform: scale(0.95);
}

/* 空状态 */
.empty-address {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 20rpx; /* 减少内边距 */
  text-align: center;
  margin-top: 120rpx; /* 减少顶部间距 */
}

.empty-icon {
  font-size: 100rpx; /* 减小图标尺寸 */
  margin-bottom: 20rpx; /* 减少间距 */
  opacity: 0.6;
}

.empty-text {
  font-size: 30rpx; /* 减小字体 */
  color: var(--text-primary);
  margin-bottom: 12rpx; /* 减少间距 */
}

.empty-desc {
  font-size: 26rpx; /* 减小字体 */
  color: var(--text-secondary);
}

/* 底部添加按钮 */
.bottom-add {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #ffffff;
  padding: 16rpx var(--spacing-lg); /* 减少内边距 */
  box-shadow: 0 -2rpx 12rpx rgba(0, 0, 0, 0.1);
  z-index: 999;
}

.add-address-btn {
  background: var(--primary-color);
  color: #ffffff;
  font-size: 28rpx; /* 减小字体 */
  font-weight: 500;
  padding: 20rpx 0; /* 减少内边距 */
  border-radius: var(--border-radius-lg);
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx; /* 减少间距 */
  transition: all 0.3s ease;
}

.add-address-btn:active {
  background: var(--primary-dark);
  transform: scale(0.98);
}

.add-icon {
  font-size: 28rpx; /* 减小字体 */
  font-weight: normal;
}

/* 选择图标（从订单页面进入时显示） */
.select-icon {
  color: var(--primary-color);
  font-size: 28rpx; /* 减小字体 */
  font-weight: bold;
}

/* 从订单页面进入时的地址项样式 */
.address-info[bindtap] {
  cursor: pointer;
}

.address-info[bindtap]:active {
  background: rgba(239, 91, 166, 0.05);
  border-radius: var(--border-radius-base);
  margin: -6rpx; /* 减少外边距 */
  padding: 6rpx; /* 减少内边距 */
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .name {
    font-size: 28rpx;
  }
  
  .phone {
    font-size: 24rpx;
  }
  
  .address-detail {
    font-size: 24rpx;
  }
  
  .default-btn {
    font-size: 22rpx;
  }
  
  .edit-btn, .delete-btn {
    font-size: 22rpx;
    padding: 6rpx 12rpx;
  }
  
  .empty-text {
    font-size: 28rpx;
  }
  
  .empty-desc {
    font-size: 24rpx;
  }
} 