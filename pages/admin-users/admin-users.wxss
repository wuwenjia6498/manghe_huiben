/* pages/admin-users/admin-users.wxss */

.admin-users-page {
  background: #f8f9fa;
  min-height: 100vh;
  padding: 0 32rpx 20rpx 32rpx;
  padding-bottom: calc(120rpx + env(safe-area-inset-bottom) + 20rpx);
}

/* 页面标题 */
.page-title {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 28rpx 0 16rpx 0;
  font-size: 34rpx;
  font-weight: 600;
  color: #1d1d1f;
}

.title-actions {
  display: flex;
  gap: 16rpx;
}

.search-icon, .export-icon {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  background: #ffffff;
  color: #666666;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

/* 搜索框 */
.search-container {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 20rpx;
  padding: 0;
}

.search-box {
  flex: 1;
  position: relative;
  background: #ffffff;
  border-radius: 20rpx;
  padding: 16rpx 24rpx;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.06);
}

.search-input {
  width: 100%;
  font-size: 28rpx;
  color: #3C3C43;
  padding-right: 50rpx;
}

.search-clear {
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 32rpx;
  height: 32rpx;
  background: #E5E5EA;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  color: #8E8E93;
}

.search-cancel {
  color: #EF5BA6;
  font-size: 28rpx;
  font-weight: 500;
  white-space: nowrap;
}

/* 用户状态筛选 */
.status-filter {
  display: flex;
  background: #ffffff;
  border-radius: 0;
  padding: 8rpx 24rpx;
  margin: 0 -32rpx 20rpx -32rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  overflow-x: auto;
  gap: 2rpx;
}

.status-item {
  flex: 1;
  min-width: 70rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 10rpx 8rpx;
  border-radius: 8rpx;
  transition: all 0.3s ease;
  cursor: pointer;
}

.status-item.active {
  background: #EF5BA6;
  box-shadow: 0 2rpx 6rpx rgba(239, 91, 166, 0.3);
}

.status-text {
  font-size: 28rpx;
  font-weight: 500;
  color: #3C3C43;
  white-space: nowrap;
  text-align: center;
}

.status-item.active .status-text {
  color: #ffffff;
  font-weight: 600;
}

/* 批量操作区域 */
.batch-operations {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: #ffffff;
  border-radius: 12rpx;
  padding: 16rpx 20rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.04);
}

.select-all {
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 26rpx;
  color: #3C3C43;
  padding: 8rpx;
  border-radius: 8rpx;
  transition: background-color 0.2s ease;
}

.select-all:active {
  background-color: #f0f0f0;
}

.select-all checkbox {
  transform: scale(0.7);
  pointer-events: none;
}

.batch-btn {
  display: flex;
  align-items: center;
  gap: 6rpx;
  background: #F2F2F7;
  color: #8E8E93;
  padding: 12rpx 16rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
  font-weight: 500;
  transition: all 0.3s ease;
}

.batch-btn.active {
  background: #EF5BA6;
  color: #ffffff;
}

/* 用户列表 */
.users-list {
  padding: 0;
}

.user-card {
  background: #ffffff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  display: flex;
  align-items: flex-start;
  padding: 20rpx 24rpx;
  gap: 16rpx;
}

.user-select {
  margin-top: 4rpx;
  padding: 8rpx;
  border-radius: 8rpx;
  transition: background-color 0.2s ease;
}

.user-select:active {
  background-color: #f0f0f0;
}

.user-select checkbox {
  transform: scale(0.6);
  pointer-events: none;
}

.user-content {
  flex: 1;
}

/* 用户头部信息 */
.user-header {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  margin-bottom: 12rpx;
}

.user-info {
  display: flex;
  align-items: flex-start;
  gap: 16rpx;
  flex: 1;
  min-width: 0;
}

.user-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  overflow: hidden;
  background: #F2F2F7;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.avatar-img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.user-basic {
  flex: 1;
  min-width: 0;
}

.user-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #1D1D1F;
  margin-bottom: 6rpx;
  line-height: 1.2;
}

.user-phone {
  font-size: 26rpx;
  color: #8E8E93;
  line-height: 1.2;
}

/* 用户状态 */
.user-status {
  display: flex;
  align-items: center;
  gap: 8rpx;
  flex-shrink: 0;
}

.user-status .status-text {
  font-size: 22rpx;
  padding: 4rpx 8rpx;
  border-radius: 8rpx;
  font-weight: 500;
  line-height: 1;
  white-space: nowrap;
}

.user-status.active .status-text {
  background: rgba(52, 199, 89, 0.1);
  color: #34C759;
}

.user-status.inactive .status-text {
  background: rgba(255, 149, 0, 0.1);
  color: #FF9500;
}

.user-status.blocked .status-text {
  background: rgba(255, 59, 48, 0.1);
  color: #FF3B30;
}

.edit-btn {
  font-size: 22rpx;
  color: #EF5BA6;
  font-weight: 500;
  padding: 4rpx 8rpx;
  border: 1rpx solid rgba(239, 91, 166, 0.2);
  border-radius: 6rpx;
  background: rgba(239, 91, 166, 0.05);
  transition: all 0.3s ease;
  white-space: nowrap;
}

.edit-btn:active {
  background: rgba(239, 91, 166, 0.1);
  transform: scale(0.95);
}

/* 用户详细信息 */
.user-details {
  margin-bottom: 16rpx;
}

.detail-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 8rpx;
  font-size: 26rpx;
  min-height: 32rpx;
}

.detail-row:last-child {
  margin-bottom: 0;
}

.label {
  color: #8E8E93;
  width: 120rpx;
  flex-shrink: 0;
  font-size: 24rpx;
}

.value {
  color: #3C3C43;
  flex: 1;
  text-align: right;
  font-size: 24rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.value.highlight {
  color: #EF5BA6;
  font-weight: 600;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 32rpx;
  background: #ffffff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
}

.empty-icon {
  font-size: 60rpx;
  margin-bottom: 20rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 30rpx;
  font-weight: 600;
  color: #3C3C43;
  margin-bottom: 12rpx;
}

.empty-desc {
  font-size: 26rpx;
  color: #8E8E93;
  text-align: center;
}

/* 加载状态 */
.loading-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 32rpx;
  background: #ffffff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
}

.loading-icon {
  font-size: 60rpx;
  margin-bottom: 20rpx;
  animation: rotate 1s linear infinite;
}

.loading-text {
  font-size: 30rpx;
  font-weight: 500;
  color: #EF5BA6;
  text-align: center;
}

@keyframes rotate {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}

/* 管理端底部导航 */
.admin-tabbar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 120rpx;
  background: #ffffff;
  border-top: 1rpx solid #e5e5e5;
  display: flex;
  z-index: 9999;
  padding-bottom: env(safe-area-inset-bottom);
  box-shadow: 0 -2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.tab-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  transition: all 0.3s ease;
  position: relative;
  z-index: 10000;
}

.tab-item:active {
  background: #f8f8f8;
}

.tab-icon {
  font-size: 44rpx;
  transition: all 0.3s ease;
}

.tab-text {
  font-size: 20rpx;
  color: #999999;
  transition: all 0.3s ease;
}

.tab-item.active .tab-icon {
  transform: scale(1.1);
}

.tab-item.active .tab-text {
  color: #EF5BA6;
  font-weight: 500;
} 