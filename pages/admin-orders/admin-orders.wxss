/* pages/admin-orders/admin-orders.wxss */

.admin-orders-page {
  background: #f8f9fa;
  min-height: 100vh;
  padding: 0 32rpx 20rpx 32rpx;
  padding-bottom: calc(120rpx + env(safe-area-inset-bottom) + 20rpx);
}

/* 页面头部 */
.page-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 28rpx 0 16rpx 0;
}

.header-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #1d1d1f;
}

.header-actions {
  display: flex;
  gap: 16rpx;
}

.search-btn, .export-btn {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  background: #ffffff;
  color: #666666;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
}

.search-btn:active, .export-btn:active {
  transform: scale(0.98);
}

/* 订单状态筛选 - 参考用户管理页面样式 */
.status-filter {
  display: flex;
  background: #ffffff;
  border-radius: 0;
  padding: 8rpx 24rpx;
  margin: 0 -32rpx 20rpx -32rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  overflow-x: auto;
  gap: 2rpx;
}

.status-item {
  flex: 1;
  min-width: 80rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 10rpx 8rpx;
  border-radius: 8rpx;
  transition: all 0.3s ease;
  cursor: pointer;
  gap: 4rpx;
}

.status-item.active {
  background: #EF5BA6;
  box-shadow: 0 2rpx 6rpx rgba(239, 91, 166, 0.3);
}

.status-text {
  font-size: 28rpx;
  font-weight: 500;
  color: #3C3C43;
  white-space: nowrap;
  text-align: center;
}

.status-item.active .status-text {
  color: #ffffff;
  font-weight: 600;
}

.status-count {
  font-size: 22rpx;
  font-weight: 600;
  color: #86868B;
  white-space: nowrap;
}

.status-item.active .status-count {
  color: rgba(255, 255, 255, 0.85);
}

/* 订单列表 */
.orders-section {
  padding: 0;
}

.order-card {
  background: #ffffff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  transition: all 0.2s ease;
}

.order-card:active {
  transform: scale(0.995);
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.12);
}

/* 订单第一行：订单号和状态 */
.order-top-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.order-basic-info {
  flex: 1;
}

.order-id {
  font-size: 28rpx;
  font-weight: 600;
  color: #1D1D1F;
  margin-bottom: 6rpx;
}

.order-time {
  font-size: 26rpx;
  color: #8E8E93;
}

.status-area {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

/* 订单状态 - 统一简洁设计 */
.order-status {
  padding: 4rpx 10rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
  font-weight: 500;
  white-space: nowrap;
  background: #F2F2F7;
  color: #3C3C43;
}

.order-status.pending {
  background: #F2F2F7;
  color: #3C3C43;
}

.order-status.paid {
  background: #F2F2F7;
  color: #3C3C43;
}

.order-status.shipped {
  background: #F2F2F7;
  color: #3C3C43;
}

.order-status.completed {
  background: #F2F2F7;
  color: #3C3C43;
}

.order-status.cancelled {
  background: #F2F2F7;
  color: #3C3C43;
}

/* 状态修改按钮 - 统一扁平设计 */
.status-edit-btn {
  padding: 4rpx 10rpx;
  background: #F2F2F7;
  border-radius: 8rpx;
  font-size: 24rpx;
  color: #3C3C43;
  font-weight: 500;
  transition: all 0.3s ease;
}

.status-edit-btn:active {
  background: #E5E5EA;
}

/* 订单第二行：客户信息 */
.order-customer-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.customer-basic {
  display: flex;
  align-items: center;
  gap: 28rpx;
}

.customer-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #1D1D1F;
}

.customer-phone {
  font-size: 26rpx;
  color: #8E8E93;
}

.order-total {
  font-size: 30rpx;
  font-weight: 700;
  color: #EF5BA6;
}

/* 订单第三行：地址和操作 */
.order-bottom-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.customer-address {
  font-size: 26rpx;
  color: #666666;
  flex: 1;
  margin-right: 24rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.order-actions {
  display: flex;
  gap: 12rpx;
}

/* 操作按钮 - 无背景简洁设计 */
.action-btn {
  padding: 4rpx 8rpx;
  border-radius: 0;
  font-size: 24rpx;
  font-weight: 500;
  text-align: center;
  transition: all 0.3s ease;
  white-space: nowrap;
  background: transparent;
  color: #3C3C43;
}

.action-btn.primary {
  background: transparent;
  color: #3C3C43;
}

.action-btn.secondary {
  background: transparent;
  color: #3C3C43;
}

.action-btn:active {
  background: #F2F2F7;
  border-radius: 6rpx;
  transform: scale(0.98);
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 32rpx;
  background: #ffffff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
}

.empty-icon {
  font-size: 60rpx;
  margin-bottom: 20rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 30rpx;
  font-weight: 600;
  color: #3C3C43;
  margin-bottom: 12rpx;
}

.empty-desc {
  font-size: 26rpx;
  color: #8E8E93;
  text-align: center;
}

/* 管理端底部导航 */
.admin-tabbar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 120rpx;
  background: #ffffff;
  border-top: 1rpx solid #e5e5e5;
  display: flex;
  z-index: 9999;
  padding-bottom: env(safe-area-inset-bottom);
  box-shadow: 0 -2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.tab-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  transition: all 0.3s ease;
  position: relative;
  z-index: 10000;
}

.tab-item:active {
  background: #f8f8f8;
}

.tab-icon {
  font-size: 44rpx;
  transition: all 0.3s ease;
}

.tab-text {
  font-size: 20rpx;
  color: #999999;
  transition: all 0.3s ease;
}

.tab-item.active .tab-icon {
  transform: scale(1.1);
}

.tab-item.active .tab-text {
  color: #EF5BA6;
  font-weight: 500;
}

/* 响应式设计 */
@media screen and (max-width: 750rpx) {
  .admin-orders-page {
    padding: 0 24rpx 20rpx 24rpx;
  }
  
  .order-card {
    padding: 14rpx 18rpx;
  }
  
  .customer-basic {
    gap: 16rpx;
  }
}

@media screen and (max-width: 600rpx) {
  .admin-orders-page {
    padding: 0 20rpx 20rpx 20rpx;
  }
  
  .order-card {
    padding: 12rpx 16rpx;
  }
  
  .order-customer-row {
    flex-direction: column;
    align-items: flex-start;
    gap: 8rpx;
  }
  
  .order-bottom-row {
    flex-direction: column;
    align-items: flex-start;
    gap: 8rpx;
  }
  
  .customer-address {
    margin-right: 0;
    white-space: normal;
    line-height: 1.4;
  }
  
  .order-actions {
    width: 100%;
    justify-content: flex-end;
  }
}

/* 第二行：下单时间 */
.order-time-row {
  display: flex;
  padding: 8rpx 0;
}

.order-time-row .order-time {
  font-size: 24rpx;
  color: #666;
} 